name: Security Scan

on:
  push:
    branches:
      - main

jobs:
  zap_scan:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: ZAP Security Scan
        uses: owasp/zap-full-scan@v1
        with:
          target: 'ttps://thinking-tester-contact-list.herokuapp.com'
